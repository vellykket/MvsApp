@model MvsApplication.ViewModels.LoginModel

@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}
<h2>Login</h2>
<h5><a asp-action="Register" asp-controller="Users">Регистрация</a></h5>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" asp-controller="Users" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Введите Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Войти" class="btn btn-outline-dark" />
                </div>
            </div>
        </form>
    </div>
</div>